        <tr>
          <td>
            <img src="<%= category.categoryImage %>" alt="Category Image" style="height: 80px; object-fit: cover; border-radius: 6px;">
          </td>
          <td><%= category.categoryName %></td>
          <td><%= category.categoryOffer || 0 %>%</td>
          <td>
