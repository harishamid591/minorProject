<!DOCTYPE HTML>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>ShopNow Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/admin-assets/css/main.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
    }

    .admin-wrapper {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      background-color: #1e1e1e;
      color: #fff;
      width: 240px;
      padding: 1rem;
    }

    .sidebar .brand {
      font-size: 1.6rem;
      font-weight: bold;
      color: orange;
      display: block;
      margin-bottom: 2rem;
    }

    .sidebar .brand span {
      color: green;
    }

    .sidebar a {
      color: #ddd;
      text-decoration: none;
      display: block;
      padding: 0.75rem 1rem;
      border-radius: 10px;
      transition: 0.3s;
    }

    .sidebar a:hover, .sidebar a.active {
      background-color: #333;
      color: #fff;
    }

    .header {
      background-color: #fff;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .header .admin-name {
      font-weight: 600;
    }

    .header img {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      object-fit: cover;
    }

    .main-content {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .nav-link i {
      margin-right: 10px;
    }

  </style>
</head>
<body>
  <div class="admin-wrapper">
    <aside class="sidebar">
      <div class="brand">Shop<span>now</span></div>
      <a href="/admin/dashboard" class="nav-link"><i class="fa fa-home"></i>Dashboard</a>
      <a href="/admin/users" class="nav-link"><i class="fa fa-users"></i>Customers</a>
      <a href="/admin/category" class="nav-link"><i class="fa fa-layer-group"></i>Category</a>
      <a href="/admin/brands" class="nav-link"><i class="fa fa-star"></i>Brands</a>
      <a href="/admin/addProducts" class="nav-link"><i class="fa fa-plus-square"></i>Add Product</a>
      <a href="/admin/products" class="nav-link"><i class="fa fa-box"></i>Products</a>
      <a href="/admin/coupon" class="nav-link"><i class="fa fa-ticket"></i>Coupon</a>
      <!-- <a href="/admin/offers" class="nav-link"><i class="fa fa-gift"></i>Offers</a> -->
      <!-- <a href="/admin/banner" class="nav-link"><i class="fa fa-image"></i>Banner</a> -->
      <a href="/admin/orders" class="nav-link"><i class="fa fa-shopping-cart"></i>Orders</a>
      <a href="/admin/sales" class="nav-link"><i class="fa fa-chart-line"></i>Sales Report</a>
    </aside>

    <div class="main-content">
      <header class="header">
        <div class="admin-name">Welcome, Admin</div>
        <div>
          <a href="/admin/logout" class="btn btn-outline-danger btn-sm"><i class="fa fa-sign-out-alt"></i> Logout</a>
        </div>
      </header>
