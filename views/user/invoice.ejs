<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Invoice - <%= order.orderId %></title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 40px;
      background-color: #f9f9f9;
      color: #333;
    }

    .invoice-container {
      background-color: #fff;
      padding: 30px 40px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      max-width: 800px;
      margin: auto;
    }

    .header {
      text-align: center;
      border-bottom: 2px solid #2f8154;
      padding-bottom: 15px;
    }

    .header h1 {
      margin: 0;
      font-size: 32px;
    }

    .header .shop {
      color: #f2b600;
    }

    .header .now {
      color: #2f8154;
    }

    .header p {
      margin: 0;
      font-size: 14px;
      color: #666;
    }

    .info {
      margin-top: 20px;
      display: flex;
      justify-content: space-between;
    }

    .info p {
      margin: 5px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #232323;
      color: white;
    }

    .totals {
      margin-top: 30px;
      font-size: 16px;
    }

    .totals p {
      margin: 4px 0;
    }

    .address {
      margin-top: 30px;
    }

    .address h3 {
      margin-bottom: 10px;
      
    }

    .footer {
      margin-top: 40px;
      text-align: center;
      font-size: 13px;
      color: #888;
    }

    .highlight {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="invoice-container">
    <div class="header">
      <h1><span class="shop">Shop</span><span class="now">now</span></h1>
      <p>Your trusted online store</p>
    </div>

    <div class="info">
      <div>
        <p><span class="highlight">Order ID:</span> <%= order.orderId %></p>
        <p><span class="highlight">Invoice Date:</span> <%= order.invoiceDate ? new Date(order.invoiceDate).toLocaleDateString() : new Date().toLocaleDateString() %></p>
        <p><span class="highlight">Payment Method:</span> <%= order.paymentMethod.toUpperCase() %></p>
      </div>
      <div>
        <p><span class="highlight">Customer ID:</span> <%= order.userId %></p>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Qty</th>
          <th>Price (₹)</th>
          <th>Total (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% order.orderedItems.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price.toFixed(2) %></td>
            <td><%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="totals">
      <p><span class="highlight">Total Order Price:</span> ₹<%= order.totalOrderPrice.toFixed(2) %></p>
      <p><span class="highlight">Delivery Charge:</span> ₹<%= order.deliveryCharge.toFixed(2) %></p>
      <p><span class="highlight">Final Amount:</span> ₹<%= order.finalAmount.toFixed(2) %></p>
    </div>

    <div class="address">
      <h3>Delivery Address</h3>
      <p><%= order.address.name %></p>
      <p><%= order.address.streetAddress %>, <%= order.address.town %>, <%= order.address.city %> - <%= order.address.pincode %></p>
      <p><%= order.address.state %>, <%= order.address.country %></p>
      <p>Phone: <%= order.address.phone %></p>
    </div>

    <div class="footer">
      Thank you for shopping with <span class="shop">Shop</span><span class="now">now</span>. For support, visit shopnow.com/support
    </div>
  </div>
</body>
</html>
