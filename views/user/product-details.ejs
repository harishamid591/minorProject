<%- include("../../views/partials/user/header") %>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/elevatezoom-plus@1.1.21/jquery.ez-plus.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
  .breadcrumb a {
    text-decoration: none;
    color: inherit;
  }

  .breadcrumb a:hover {
    color: #007bff;
    text-decoration: underline;
  }

  .wishlist-icon i {
    transition: color 0.3s ease;
  }

  .wishlist-icon:hover i,
  .wishlist-icon.selected i {
    color: red;
  }
</style>

<!-- Breadcrumb -->
<nav class="container mt-4" aria-label="breadcrumb">
  <ol class="breadcrumb bg-light p-2 rounded">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item">
      <a href="/filter?category=<%= product.category._id %>">
        <%= product.category.categoryName %>
      </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= product.productName %>
    </li>
  </ol>
</nav>

<main class="container-fluid my-5">
  <div class="row">
    <!-- Left: Main Image & Thumbnails -->
    <div class="col-md-6">
      <div class="text-center mb-4">
        <img id="zoom-image"
          src="<%= product.productImage[0] %>"
          data-zoom-image="<%= product.productImage[0] %>"
          class="img-fluid"
          style="max-height: 400px; object-fit: contain;"
        />
      </div>

      <div class="d-flex justify-content-center gap-2 mt-3">
        <% product.productImage.forEach((img) => { %>
          <img
            src="<%= img %>"
            onclick="changeMainImage(this)"
            style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
            class="border p-1"
          />
        <% }) %>
      </div>

      <section class="mt-5 ms-5">
        <h4>Product Details</h4>
        <hr />
        <p><strong>Description</strong><br><%= product.description %></p>
      </section>
    </div>

    <!-- Right: Info -->
    <div class="col-md-6">
      <h2><%= product.productName %></h2>
      <p class="text-muted mb-1"><strong>Brand:</strong> productbrand</p>
      <p class="text-muted mb-1">
        <strong>Pack Size:</strong> <%= product.productQuantity %> <%= product.unit %>
      </p>

      <div class="mb-3 d-flex align-items-center justify-content-between">
        <div>
          <span class="h4 fw-bold text-success">
            ‚Çπ <%= product.price - (product.price * product.effectiveDiscount / 100) %>
          </span>
          <% if (product.price && product.effectiveDiscount) { %>
            <small class="text-muted text-decoration-line-through ms-2">MRP ‚Çπ<%= product.price %></small>
            <span class="badge bg-success ms-2"><%= product.effectiveDiscount %>% off</span>
          <% } %>
        </div>
      </div>

      <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-danger" type="button" onclick="decreaseQty('qty')">-</button>
        <input type="text" id="qty" value="1" class="form-control text-center mx-2" style="width: 60px;" readonly />
        <button class="btn btn-outline-success" type="button" onclick="increaseQty('qty','<%= product.stock %>')">+</button>
      </div>

      <div class="d-flex align-items-center gap-2 mb-3">
        <a class="btn text-light btn-primary" href="#" onclick="addToCart('<%= product._id %>', 'qty')">Add to Cart</a>
        <button class="btn btn-outline-secondary wishlist-icon <%= product.inWishlist ? 'selected' : '' %>"
          onclick="addToWishlist('<%= product._id %>', this)" title="Add to Wishlist">
          <i class="fa fa-heart"></i>
        </button>
      </div>

      <input type="hidden" id="stock" value="<%= product.stock %>">
      <% if (product.stock === 0) { %>
        <p class="text-danger">Out of Stock</p>
      <% } else if (product.stock <= 10) { %>
        <p class="text-danger">Only <%= product.stock %> left in Stock</p>
      <% } else { %>
        <p class="text-success">In Stock</p>
      <% } %>

      <h5 class="mt-4">Why shop from Shopnow?</h5>
      <ul class="list-unstyled mt-3">
        <li class="d-flex mb-3">
          <div class="me-3">üöö</div>
          <div><strong>Superfast Delivery</strong><br>Delivered to your doorstep fast.</div>
        </li>
        <li class="d-flex mb-3">
          <div class="me-3">üè∑Ô∏è</div>
          <div><strong>Best Prices & Offers</strong><br>Direct discounts from manufacturers.</div>
        </li>
        <li class="d-flex">
          <div class="me-3">üõçÔ∏è</div>
          <div><strong>Wide Assortment</strong><br>5000+ products across categories.</div>
        </li>
      </ul>
    </div>
  </div>
</main>

<!-- Recommended Products -->
<section class="container my-5">
  <h4 class="mb-4">Recommended Products</h4>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% recommendedProducts.forEach((rp, index) => { %>
    <div class="col">
      <div class="card h-100 shadow-sm p-2 position-relative">
        <% if (rp.stock === 0) { %>
          <span class="badge bg-danger position-absolute" style="top: 10px; right: 10px;">Out of Stock</span>
        <% } else if (rp.effectiveDiscount) { %>
          <span class="badge bg-success position-absolute" style="top: 10px; right: 10px;">-<%= rp.effectiveDiscount %>%</span>
        <% } %>

        <a href="#" onclick="addToWishlist('<%=rp._id%>')" class="btn btn-sm btn-light border rounded-circle position-absolute"
          style="top: 10px; left: 10px;">
          <i class="fas fa-heart text-danger"></i>
        </a>

        <a href="/productDetails/<%= rp._id %>">
          <img src="<%= rp.productImage[0] %>" class="card-img-top img-fluid"
            style="max-height: 150px; object-fit: contain;" alt="<%= rp.productName %>">
        </a>

        <div class="card-body p-2">
          <h6 class="card-title text-truncate fw-semibold"><%= rp.productName %></h6>
          <div class="mb-2">
            <span class="fw-bold text-success">‚Çπ<%= rp.price - (rp.price * rp.effectiveDiscount / 100) %></span>
          </div>

          <div class="d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-danger" onclick="decreaseQty('qty<%= index %>')">-</button>
            <input type="text" id="qty<%= index %>" value="1" class="form-control text-center" style="width: 40px;" readonly />
            <button class="btn btn-outline-success" onclick="increaseQty('qty<%= index %>', '<%= rp.stock %>')">+</button>
            <a class="btn btn-primary text-light" href="#" onclick="addToCart('<%= rp._id %>', 'qty<%= index %>')">Add to Cart</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<!-- JS Logic -->
<script>
  function initializeZoom() {
    $("#zoom-image").ezPlus({
      zoomType: "lens",
      lensShape: "round",
      lensSize: 200,
      scrollZoom: true
    });
  }

  function changeMainImage(thumbnail) {
    const src = thumbnail.src;
    const $mainImage = $('#zoom-image');

    $mainImage.attr('src', src);
    $mainImage.attr('data-zoom-image', src);
    $mainImage.removeData('ezPlus');
    $('.zoomContainer').remove();
    initializeZoom();
  }

  function increaseQty(id, stock = 5) {
    const input = document.getElementById(id);
    let qty = parseInt(input.value);
    if (qty < stock && qty < 5) input.value = qty + 1;
  }

  function decreaseQty(id) {
    const input = document.getElementById(id);
    let qty = parseInt(input.value);
    if (qty > 1) input.value = qty - 1;
  }

  function addToCart(productId, qtyInputId) {
    const qty = document.getElementById(qtyInputId).value;
    $.post('/addToCart', { productId, quantity: qty }, (response) => {
      if (response.success) {
        Swal.fire({
          title: "Added to Cart",
          text: response.message,
          icon: "success",
          showCancelButton: true,
          confirmButtonText: "Go to Cart",
          cancelButtonText: "Continue Shopping"
        }).then((result) => {
          if (result.isConfirmed) window.location.href = '/cart';
        });
      } else {
        Swal.fire("Error", response.message || "Failed to add to cart", "error");
      }
    }).fail(() => {
      Swal.fire("Server Error", "Try again later.", "error");
    });
  }

  function addToWishlist(productId, el) {
    $.post('/addToWishlist', { productId }, (response) => {
      if (response.status) {
        Swal.fire("Added", "Added to wishlist", "success");
        if (el) el.classList.add('selected');
      } else {
        Swal.fire("Already Added", response.message, "info");
        if (el) el.classList.add('selected');
      }
    }).fail((xhr) => {
      if (xhr.status === 401) {
        Swal.fire("Login Required", "Please log in to use wishlist.", "warning");
      } else {
        Swal.fire("Error", "Could not update wishlist.", "error");
      }
    });
  }

  $(document).ready(() => {
    initializeZoom();
  });
</script>

