<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Verify OTP</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet"/>

  <!-- SweetAlert2 CDN -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- jQuery CDN -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Nunito Sans', sans-serif;
      background-color: #f2f2f2;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      display: flex;
      background-color: white;
      width: 850px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      border-radius: 15px;
      overflow: hidden;
    }
    .form-section {
      width: 50%;
      padding: 50px 30px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .form-section h2 {
      font-size: 26px;
      margin-bottom: 30px;
      font-weight: 700;
      color: #333;
    }
    .input-box {
      margin-bottom: 20px;
    }
    .input-box input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 25px;
      outline: none;
      font-size: 15px;
    }
    .btn {
      width: 100%;
      background-color: green;
      color: white;
      font-weight: bold;
      padding: 12px;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 10px;
    }
    .timer {
      margin-top: 10px;
      font-size: 14px;
      color: gray;
      text-align: center;
    }
    .resend {
      text-align: center;
      margin-top: 10px;
    }
    .resend button {
      background: none;
      border: none;
      color: #007bff;
      cursor: pointer;
      font-size: 14px;
    }
    .message {
      color: red;
      font-size: 14px;
      text-align: center;
      margin-top: 10px;
    }
    .brand-section {
      width: 50%;
      background-color: #222;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .brand-section h1 {
      font-size: 40px;
      color: orange;
    }
    .brand-section h1 span {
      color: green;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="form-section">
      <h2>OTP Verification</h2>
      <form method="POST" action="/verify-otp" onsubmit="return validateOtpForm()">
        <div class="input-box">
          <input type="text" id="otp" name="otp" placeholder="Enter 6-digit OTP" maxlength="6" required>
        </div>
        <button type="submit" class="btn">Verify OTP</button>

        <div class="timer">
          <span id="timer">60</span> seconds remaining
        </div>
        <div class="resend">
          <button type="button" id="resendBtn" disabled onclick="resendOtp()">Resend OTP</button>
        </div>
        <% if (locals.msg) { %>
          <div class="message"><%= msg %></div>
        <% } %>
      </form>
    </div>
    <div class="brand-section">
      <h1>Shop<span>now</span></h1>
    </div>
  </div>

  <script>
    let timeLeft = 60;
    const timerEl = document.getElementById('timer');
    const resendBtn = document.getElementById('resendBtn');

    const countdown = setInterval(() => {
      timeLeft--;
      timerEl.textContent = timeLeft;
      if (timeLeft <= 0) {
        clearInterval(countdown);
        timerEl.textContent = "Expired";
        timerEl.style.color = "red";
        resendBtn.disabled = false;
      }
    }, 1000);

    function validateOtpForm(){
      const otpInput = document.getElementById('otp').value;

      if (!/^\d{6}$/.test(otpInput)) {
        Swal.fire("Invalid OTP", "Please enter a valid 6-digit OTP", "warning");
        return false;
      }

      $.ajax({
        type: "POST",
        url: '/verify-otp',
        data: { otp: otpInput },
        success: function(res){
          if(res.success){
            Swal.fire("Verified!", res.message || "OTP verified successfully.", "success").then(() => {
              window.location.href = res.redirectUrl || "/reset-password";
            });
          } else {
            Swal.fire("Failed", res.message || "Invalid OTP. Please try again.", "error");
          }
        },
        error: function(){
          Swal.fire("Error", "Something went wrong. Please try again.", "error");
        }
      });

      return false; // prevent normal form submit
    }


    function resendOtp(){
      $.ajax({
        type: "POST",
        url: "/resend-otp",
        success: function(res){
          if(res.success){
            Swal.fire("OTP Sent", "A new OTP has been sent to your email.", "info");
            timeLeft = 60;
            resendBtn.disabled = true;
            timerEl.textContent = "60";
            timerEl.style.color = "gray";

            setInterval(() => {
              if (timeLeft > 0) {
                timeLeft--;
                timerEl.textContent = timeLeft;
              } else {
                resendBtn.disabled = false;
                timerEl.textContent = "Expired";
                timerEl.style.color = "red";
              }
            }, 1000);
          } else {
            Swal.fire("Error", res.message || "Could not resend OTP.", "error");
          }
        },
        error: function(){
          Swal.fire("Error", "Server error while resending OTP.", "error");
        }
      });
    }
  </script>

</body>
</html>
